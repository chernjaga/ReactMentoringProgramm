{
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-clean-code",
        "tslint-eslint-rules",
        "tslint-config-prettier"
    ],
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "new-parens": true,
        "arrow-parens": true,
        "prefer-dry-conditionals": true,
        "no-map-without-usage": true,
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-empty-interface": true,
        "no-duplicate-variable": [
            true,
            "check-parameters"
        ],
        "no-return-await": true,
        "array-type": [
            true,
            "array-simple"
        ],
        "no-implicit-dependencies": [
            true,
            "dev"
        ],
        "newline-before-return": true,
        "no-trailing-whitespace": true,
        "import-spacing": true,
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-operator",
            "check-typecast"
        ],
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "no-any": true,
        "promise-function-async": [
            true
        ],
        "typedef": [
            true,
            "call-signature",
            "arrow-parameter",
            "variable-declaration",
            "member-variable-declaration"
        ],
        "jsx-curly-spacing ": [
            "always"
        ],
        "jsx-no-multiline-js": false,
        "jsx-self-close": true,
        "jsx-wrap-multiline": true,
        "jsx-boolean-value": false,
        "jsx-no-bind": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "no-trailing-whitespace": true
    }
}